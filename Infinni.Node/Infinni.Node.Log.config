<?xml version="1.0" encoding="utf-8" ?>
<configuration>

    <!-- Examples: http://logging.apache.org/log4net/release/config-examples.html -->

    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>

    <log4net>

        <root>
            <level value="INFO" />
            <appender-ref ref="ManagedColoredConsoleAppender" />
            <appender-ref ref="RollingFileAppender" />
        </root>

        <appender name="ManagedColoredConsoleAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
            <mapping>
                <level value="DEBUG" />
                <foreColor value="Cyan" />
            </mapping>
            <mapping>
                <level value="INFO" />
                <foreColor value="DarkGreen" />
            </mapping>
            <mapping>
                <level value="WARN" />
                <foreColor value="Yellow" />
            </mapping>
            <mapping>
                <level value="ERROR" />
                <foreColor value="Red" />
            </mapping>
            <mapping>
                <level value="FATAL" />
                <foreColor value="Magenta" />
            </mapping>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [PID %property{pid}] %-5level - %message%newline" />
            </layout>
        </appender>

        <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
            <file value="Infinni.Node.log" />
            <encoding value="utf-8" />
            <appendToFile value="true" />
            <rollingStyle value="Size" />
            <maxSizeRollBackups value="500" />
            <maximumFileSize value="10MB" />
            <staticLogFileName value="true" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [PID %property{pid}] %-5level - %message%newline" />
            </layout>
            <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        </appender>

    </log4net>

</configuration>
